<style>
  body {background-color: #DB37D8;}
</style>

<div id="comienzolug" class="text-center">
    <span class="h2 text-gray-800"><i class="fa fa-map-marker"></i> Ubicaciones de almacen <i class="fa fa-map-marker"></i></span> 
</div>
<br />

<div class="row mb-3">
  <div class="col">
    <%= link_to new_location_path, {remote: true, class: "btn btn-primary form-control", id: "anadir-lugar-btn"}  do %>
    <span class="fas fa-plus-square" ></span> Crear nueva ubicacion
    <% end %>
  </div>
  <div class="col">
    <%= search_form_for @q, options = {class: "w-100"} do |f| %>
    <%= f.search_field :nombre_lugar_cont, options = {class: "form-control", placeholder: "Buscar..."} %>
    <%= f.button :type => "submit", class: "btn btn-success form-control mt-1" do %>
    <span class="fas fa-search"></span> Buscar
    <% end %>
    <% end %>
  </div>
</div>

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table id="tablaLugares" class="table table-striped" width="100%">
	<thead>
	  <tr>
	    <th class="align-middle text-center">Nombre</th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	  <% @lugares.each do |lug| %>
	  <tr id="lugar_<%= lug.id %>" >
	    <td class="align-middle text-center"><%= lug.nombre_lugar %></td>
	    <td class="align-middle text-center">
	      <div class="btn-group ">
		<%= link_to "Editar", edit_location_path(lug), html_options = {class: "btn btn-secondary btn-sm", remote: true} %>
		<%= link_to 'Borrar', lug, remote: true, method: :delete, data: { confirm: "Borrar la ubicacion: #{lug.nombre_lugar}?"}, class: "btn btn-danger btn-sm" %>
	      </div>
	    </td>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'modal_ubicacion' %>
