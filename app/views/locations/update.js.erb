    '<tr id="lugar_<%= @lugar.id %>" ><td class="align-middle text-center"><%= @lugar.nombre_lugar %></td><td class="align-middle text-center"><div class="btn-group"><%= link_to ('<i class="far fa-edit"> </i>').html_safe, edit_location_path(@lugar), html_options = {class: "btn btn-secondary btn-sm", remote: true} %> <%= link_to ('<i class="fas fa-window-close"> </i>').html_safe, @lugar, remote: true, method: :delete, data: { confirm: "Borrar la Ubicacion: #{@lugar.nombre_lugar}?"}, class: "btn btn-danger btn-sm" %></div></td></tr>'
);
