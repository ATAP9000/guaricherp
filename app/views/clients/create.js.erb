$('#modalClientes').modal('toggle');
$('#tablaClientes').append(
    '<tr id="cliente_<%= @client.id %>" ><td class="align-middle text-center"><%= @client.rif_cliente %></td><td class="align-middle text-center"><%= @client.nombre_cliente %></td><td class="align-middle text-center"><%= @client.phoneclients.first.try(:numero_cliente) %></td><td class="align-middle text-center"><div class="btn-group "><%= link_to ('<i class="fas fa-info-circle"> </i>').html_safe, client_path(@client), html_options = {class: "btn btn-info btn-sm", remote: true} %> <%= link_to ('<i class="far fa-edit"> </i>').html_safe, edit_client_path(@client), html_options = {class: "btn btn-secondary btn-sm", remote: true} %> <%= link_to ('<i class="fas fa-window-close"> </i>').html_safe, @client, remote: true, method: :delete, data: { confirm: "Borrar Cliente: #{@client.nombre_cliente}?"}, class: "btn btn-danger btn-sm" %></div></td></tr>'
);
$('#comienzoclit').after('<div id="si" class="alert alert-success alert-dismissible fade show mt-2" role="alert"><%= flash.now[:sucess] = "Se ha Registrado el Cliente" %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');
$(".alert").first().hide().slideDown(500).delay(4000).slideUp(500, function () {$(this).remove();});