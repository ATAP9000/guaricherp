<form>
  <div class="row">
    <div class="input-group flex-nowrap">
      <% if @client.type_client.nombre_tipo_cliente == "juridico" %>
      <label class="input-group-text fw-bold" for="idclit">RIF:</label>
      <input type="text" readonly class="form-control text-center" aria-describedby="idclit" value="J-<%=@client.rif_cliente %>">
      <% elsif @client.type_client.nombre_tipo_cliente == "natural" %>
      <label class="input-group-text fw-bold">Cedula:</label>
      <input type="text" readonly class="form-control text-center" value="<%=@client.rif_cliente %>">
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="input-group flex-nowrap">
      <label class="input-group-text fw-bold" for="categoriaclit">Categoria:</label>
      <input type="text" readonly class="form-control text-center" aria-describedby="categoriaclit" value="<%= @client.type_client.nombre_tipo_cliente %>">
    </div>
  </div>
  <div class="row mt-3">
    <div class="input-group flex-nowrap">
      <label class="input-group-text fw-bold" for="nombreclit">Nombre:</label>
      <input type="text" readonly class="form-control text-center" aria-describedby="nombreclit" value="<%= @client.nombre_cliente %>">
    </div>
  </div>
  <div class="row mt-3">
    <div class="input-group flex-nowrap">  
      <label class="input-group-text fw-bold" for="direccionclit">Direccion:</label>
      <input type="text" readonly class="form-control text-center" aria-describedby="direccionclit" value="<%= @client.direccion_cliente %>">
    </div>
  </div>
  <div class="row container mt-3">
    <label class="fw-bold text-center" for="telclit">Telefonos:</label>
    <% @client.phoneclients.each do |tel| %>
      <input type="text" readonly class="form-control text-center" aria-describedby="telclit" value="<%= tel.numero_cliente %>"></input>
      <% end %>
  </div>
  <div class="row mt-3">
    <div class="input-group flex-nowrap">
      <label class="input-group-text fw-bold" for="correoclit">Correo:</label>
      <input type="text" readonly class="form-control text-center" aria-describedby="correoclit" value="<%= @client.correo_cliente != nil ? @client.correo_cliente : "No tiene correo" %>">
    </div>
  </div>
  <div class="row mt-3">
    <div class="input-group flex-nowrap">
      <label class="input-group-text fw-bold" for="desclit">Descripcion:</label>
      <textarea type="text" readonly class="form-control text-center" aria-describedby="desclit"><%= @client.descripcion_cliente %></textarea>
    </div>
  </div>
</form>
