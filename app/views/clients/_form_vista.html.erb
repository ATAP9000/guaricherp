<form>
	<div class="row">
	
			<div class="col-md-6">
			<label class="form-label" for="id">Numero de Rif</label>
			<input type="text" readonly class="form-control" value="<%= @client.rif_cliente %>">
			</div>
			
			<div class="form-group col-md-6">
			<label class="form-label" for="fecha">Nombre</label>
			<input type="text" readonly class="form-control" value="<%= @client.nombre_cliente %>">
			</div>
			
			<div class="form-group col-md-6">
			<label class="form-label" for="vendedor">Categoria:</label>
			<input type="text" readonly class="form-control" value="<%= @client.type_client.nombre_tipo_cliente %>">
			</div>
			
			<div class="form-group col-md-6">
			<label class="form-label" for="fecha">Direccion</label>
			<input type="text" readonly class="form-control" value="<%= @client.direccion_cliente %>">
			</div>
			
			<div class="form-group col-md-6">
			<label  class="form-label" for="cliente">Telefonos:</label>
			<% @client.phoneclients.each do |tel| %>
			<input type="text" readonly class="form-control mb-2 mt-1" value="- <%= tel.numero_cliente %>">
			<% end %>
			</div>
			
			<div class="form-group col-md-6">
			<label class="form-label" for="cliente">Correo:</label>
			<input type="text" readonly class="form-control" value="<%= @client.correo_cliente != nil ? @client.correo_cliente : "No tiene correo" %>">
			</div>
			
			<div class="form-group col">
			<label class="form-label" for="cliente">Descripcion:</label>
			<textarea type="text" readonly class="form-control"><%= @client.descripcion_cliente %></textarea>
			</div>
	
	</div>
</form>
