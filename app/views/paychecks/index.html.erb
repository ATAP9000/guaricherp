<style>
body {background-color: #FC8E6D;}
</style>

<i class="fa fa-balance-scale"></i><span class="h3 mb-2 text-gray-800">Nominas de pago</span><i class="fa fa-balance-scale" ></i>

<%= search_form_for @search, url: search_paychecks_path, html: {method: :post} do |f| %>
<div class="row mb-2 mt-2">
  <div class="col">
    <%= f.date_field :inicio_nomina_gteq, class: "form-control", placeholder: "Fecha de inicio..." %>
  </div>
  <div class="col">
    <%= f.date_field :fin_nomina_lteq, class: "form-control", placeholder: "Fecha fin..." %>
  </div>
  <div class="col">
    <%= f.submit "Buscar", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>


<div class="row mt-2 mb-3">
  <div class="col mt-2">
    <%= link_to new_paycheck_path, {class: "btn btn-info form-control", id: "crear-nomina-btn"}  do %>
    <span class="fas fa-plus-square"> Registrar nomina</span>
    <% end %>
  </div>
  <div class="col mt-2">
    <%= link_to paychecks_path(request.params.merge(format: :pdf)), {class: "btn btn-primary form-control", target: :_blank} do %>
    <span class="fas fa-file-alt" > Generar reporte de nominas</span> 
      <% end %>
  </div>
</div>

<div class="card shadow mb-4">
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-striped" id="tabla_nominas" width="60%" cellspacing="0">
				<thead>
				<tr>
					<th class="align-middle text-center">Id</th>
					<th class="align-middle text-center">Periodo</th>
					<th class="align-middle text-center">Encargado</th>
					<th class="align-middle text-center">Empleado</th>
					<th class="align-middle text-center">Fecha Elaboracion</th>
					<th></th>
				</tr>
				</thead>
				<tbody>
					<% if @nominas.empty? %>
						<tr>
						<td class="text-danger fs-4"> No hay nominas </td>
						<td></td>
						<td></td> 
						<td></td>
						<td></td>
						<td></td>
						</tr>
						<% else %>
						<% @nominas.each do |pay| %>
						<tr> 
							<td class="align-middle text-center"> <%= pay.id %> </td>
							<td class="align-middle text-center"> <%= pay.try(:periodo) %> </td>
							<td class="align-middle text-center"> <%= pay.user.username %> </td>
							<td class="align-middle text-center"> <%= pay.try(:employee).try(:primer_nombre) %> </td>
							<td class="align-middle text-center"> <%= pay.created_at.to_s(:db) %> </td>
							<td class="align-middle text-center"> 
								<div class="btn-group ">
									<%= link_to 'Mostrar', paycheck_path(pay), {class: "btn btn-info btn-sm", remote: true} %>
									<%= link_to 'Borrar', pay, method: :delete, data: { confirm: 'Eliminar la nomina?' }, class: "btn btn-danger btn-sm" %>
								</div>	
							</td>
						</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<%= render 'modal_paychecks' %>
