<h1 class="h3 mb-2 text-gray-800">Nominas de pago</h1>
   
<div>
  <%= link_to new_paycheck_path, {class: "btn btn-info", id: "crear-nomina-btn"}  do %>
  <span class="fas fa-plus-square"> </span>
  Registrar nomina
  <%end%>
    </div>
<br />
<br />
<div class="card shadow mb-4">
<div class="card-body">
    <div class="table-responsive">
    <table class="table table-bordered" id="tabla_nominas" width="60%" cellspacing="0">
        <thead>
        <tr>
          <th>Id</th>
	  <th>Encargado</th>
	  <th>Empleado</th>
	  <th>Total</th>
	  <th>Fecha y hora</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% if @nominas.empty? %>
          <tr> 
            <td> No hay nominas </td><td></td><td></td> 
          </tr>
          <% else %>
            <% @nominas.each do |pay| %>
              <tr> 
                <td> <%= pay.id %> </td>
		<td> <%= pay.user.username %> </td>
		<td> <%= pay.try(:employee).try(:primer_nombre) %> </td>
                <td> $<%= pay.salario_nomina%> </td>
		<td> <%= pay.created_at.to_s(:db) %> </td>
                <td> 
		  <%= link_to 'Mostrar', paycheck_path(pay), {class: "btn btn-info btn-xs", remote: true} %>
		  <%= link_to 'Borrar', pay, method: :delete, data: { confirm: 'Eliminar la nomina?' }, class: "btn btn-danger btn-xs" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>
<%= render 'modal_paychecks' %>
