<style>
  .btn-custom {
      background-color: #063f72;
      color: #fff;
  }
  .btn-custom:hover {
      background-color: #1769b3;
      color: #fff;
  }
  label {
      color: #fff;
  }
  a,
  a:hover {
      color: #fff;
      text-decoration: none;
  }
  a,
  a:hover {
      text-decoration: none;
  }
  @media(max-width: 932px) {
      .display-none {
	  display: none !important;
      }
  }
</style>

<%= image_tag("logo1.png", :class => "justify-content-center align-items-center mb-5") %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-75"}) do |f| %>
  <div class="mb-2">
    <%= f.label :login, class:"form-label" %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control d-grid w-100", placeholder: "Usuario...", required: true%>
  </div>

  <div class="mb-2">
    <%= f.label :Clave, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Clave...", required: true%>
  </div>
<br>
  <div class="d-grid mx-auto">
    <%= f.submit "Ingresar", class: "btn btn-custom btn-lg btn-block"%>
  </div>
<% end %>

