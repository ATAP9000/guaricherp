<h4 class="fw-bold text-center pe-4">Ingresar al sistema</h4><br />
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html_options: {class: "g-3 bg-primary mt-4 mb-4"}) do |f| %>
  <div class="mb-2">
    <%= f.label :login, class:"form-label ms-2" %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Usuario...", required: true%>
  </div>

  <div class="mb-2">
    <%= f.label :Clave, class:"form-label ms-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Clave...", required: true%>
  </div>
<br>
  <div class="d-grid gap-2 col-4 mx-auto">
    <%= f.submit "Ingresar", class: "btn btn-dark"%>
  </div>
<% end %>

