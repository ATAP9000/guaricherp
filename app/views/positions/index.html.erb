<style>
body {background-color: #ffe259;}
</style>
<i class="fa fa-graduation-cap"></i><span class="h3 ms-2 me-2 mb-2 text-gray-800">Cargos de empleados</span><i class="fa fa-graduation-cap"></i>

<div class="row mt-2 mb-2">
  <div class="col">
    <%= link_to new_position_path, {remote: true, class: "btn btn-info form-control", id: "anadir-cargo-btn"}  do %>
    <span class="fas fa-plus-square" ></span> Registrar nuevo cargo de empleado
    <% end %>
  </div>
  <div class="col">
    <%= search_form_for @q, options = {class: "w-100"} do |f| %>
    <%= f.search_field :nombre_cargo_cont, options = {class: "form-control", placeholder: "Buscar..."} %>
    <%= f.button :type => "submit", class: "btn btn-info mt-1 form-control" do %>
  <span class="fas fa-search"></span> Buscar
  <% end %>
    <% end %>
  </div>
</div>

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table id="tablaCargos" class="table table-striped" width="100%">
	<thead>
	  <tr>
	    <th class="align-middle text-center">Nombre</th>
	    <th class="align-middle text-center"></th>
	  </tr>
	</thead>
	<tbody>
	  <% @cargos.each do |car| %>
	  <tr id="cargo_<%= car.id %>" >
	    <td class="align-middle text-center"><%= car.nombre_cargo %></td>
	    <td class="align-middle text-center">
		<div class="btn-group ">
	      <%= link_to "Editar", edit_position_path(car), html_options = {class: "btn btn-info btn-xs", remote: true} %>
	      <%= link_to 'Borrar', car, remote: true, method: :delete, data: { confirm: "Borrar el cargo: #{car.nombre_cargo}?"}, class: "btn btn-danger btn-xs" %>
	    </div>
		</td>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'modal_cargos' %>
