$('#modalCargos').modal('toggle');
$('#tablaCargos').append(
    '<tr id="cargo_<%= @cargo.id %>" ><td class="align-middle text-center"><%= @cargo.nombre_cargo %></td><td class="align-middle text-center"><div class="btn-group"><%= link_to ('<i class="far fa-edit"> </i>').html_safe, edit_position_path(@cargo), html_options = {class: "btn btn-secondary btn-sm", remote: true} %> <%= link_to ('<i class="fas fa-window-close"> </i>').html_safe, @cargo, remote: true, method: :delete, data: { confirm: "Borrar el Cargo: #{@cargo.nombre_cargo}?"}, class: "btn btn-danger btn-sm" %></div></td></tr>'
);
$('#comienzocar').after('<div id="si" class="alert alert-info alert-dismissible fade show mt-2" role="alert"><%= flash.now[:success] = "Se ha Registrado el Cargo" %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');
$(".alert").first().hide().slideDown(500).delay(4000).slideUp(500, function () {$(this).remove();});