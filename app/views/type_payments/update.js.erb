$('#modalPagos').modal('toggle');
$('#tipodepago_<%= @tipodepago.id %>').replaceWith(
    '<tr id="tipodepago_<%= @tipodepago.id %>" ><td class="align-middle text-center"><%= @tipodepago.nombre_tipo_pago %></td><td class="align-middle text-center"><div class="btn-group"><%= link_to ('<i class="far fa-edit"> </i>').html_safe, edit_type_payment_path(@tipodepago), html_options = {class: "btn btn-secondary btn-sm", remote: true} %> <%= link_to ('<i class="fas fa-window-close"> </i>').html_safe, @tipodepago, remote: true, method: :delete, data: { confirm: "Borrar el Metodo de Pago: #{@tipodepago.nombre_tipo_pago}?"}, class: "btn btn-danger btn-sm" %></div></td></tr>'
