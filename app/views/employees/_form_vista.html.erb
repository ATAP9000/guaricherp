<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="id">Numero de cedula:</label>
      <input type="text" readonly class="form-control-plaintext" value="<%= @empleado.numero_cedula %>"> </input>
    </div>
    <div class="form-group col-md-6">
      <label for="fecha">Nombre completo:</label>
      <input type="text" readonly class="form-control-plaintext" value="<%= @empleado.nombre_completo %>"></input>
    </div>
  </div>
  <div class="form-group col-md-6">
    <label for="vendedor">Fecha de ingreso:</label>
    <input type="text" readonly class="form-control-plaintext" value="<%= @empleado.fecha_ingreso %>"></input>
  </div>
  <div class="form-group col-md-6">
    <label for="cliente">Salario:</label>
    <input type="text" readonly class="form-control-plaintext" value="<%= @empleado.salario_empleado %>"></input>
  </div>
  <div class="form-group col-md-6">
    <label for="cliente">Correo:</label>
    <input type="text" readonly class="form-control-plaintext" value="<%= @empleado.correo_empleado %>"></input>
  </div>
  <div class="form-group col-md-6">
    <label for="cliente">Cargo:</label>
    <input type="text" readonly class="form-control-plaintext" value="<%= @empleado.position.nombre_cargo %>"></input>
  </div>
</form>
