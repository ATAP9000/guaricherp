$('#modalEmpleados').modal('toggle');
$('#tablaEmpleados').append(
    '<tr id="empleado_<%= @employee.id %>" ><td class="align-middle text-center"><%= @employee.numero_cedula %></td><td class="align-middle text-center"><%= @employee.nombre_apellido %></td><td class="align-middle text-center">Bs <%= @employee.salario_empleado.round(2) %></td><td class="align-middle text-center">Bs <%= @employee.salario_diario %></td><td class="align-middle text-center"><%= @employee.position.nombre_cargo %></td><td class="align-middle text-center"><div class="btn-group "><%= link_to ('<i class="fas fa-info-circle"> </i>').html_safe, employee_path(@employee), html_options = {class: "btn btn-info btn-sm", remote: true} %> <%= link_to ('<i class="far fa-edit"> </i>').html_safe, edit_employee_path(@employee), html_options = {class: "btn btn-secondary btn-sm", remote: true} %><%= link_to ('<i class="fas fa-window-close"> </i>').html_safe, @employee, remote: true, method: :delete, data: { confirm: "Borrar Empleado: #{@employee.nombre_apellido}?"}, class: "btn btn-danger btn-sm" %></div></td></tr>'
);
$('#comienzoemp').after('<div id="si" class="alert alert-success alert-dismissible fade show mt-2" role="alert"><%= flash.now[:sucess] = "Se ha Registrado el Empleado" %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');
$(".alert").first().hide().slideDown(500).delay(4000).slideUp(500, function () {$(this).remove();});