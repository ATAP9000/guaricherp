$('#modalUnidades').modal('toggle');
$('#tablaUnidades').append(
    '<tr id="unidad_<%= @unidad.id %>" ><td class="align-middle text-center"><%= @unidad.nombre_unidad %></td><td class="align-middle text-center"><%= @unidad.simbolo_unidad %></td><td class="align-middle text-center"><div class="btn-group"><%= link_to ('<i class="far fa-edit"> </i>').html_safe, edit_unit_path(@unidad), html_options = {class: "btn btn-secondary btn-sm", remote: true} %> <%= link_to ('<i class="fas fa-window-close"> </i>').html_safe, @unidad, remote: true, method: :delete, data: { confirm: "Borrar la Unidad: #{@unidad.nombre_unidad}?"}, class: "btn btn-danger btn-sm" %></div></td></tr>'
);
$('#comienzouni').after('<div id="si" class="alert alert-info alert-dismissible fade show mt-2" role="alert"><%= flash.now[:success] = "Se ha creado la unidad" %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');
$(".alert").first().hide().slideDown(500).delay(4000).slideUp(500, function () {$(this).remove();});