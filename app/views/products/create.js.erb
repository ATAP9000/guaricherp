$('#modalProductos').modal('toggle');
$('#tablaProductos').append(
    '<tr id="producto_<%= @product.id %>" ><td class="align-middle text-center"><%= @product.codigo_producto %></td><td class="align-middle text-center"><%= @product.nombre_producto %></td><% if @product.existencia_producto <= @product.min_producto %><td class="align-middle text-center bg-danger fs-5"><%= @product.existencia_producto %></td><% else %><td class="align-middle text-center"><%= @product.existencia_producto %></td><% end %><td class="align-middle text-center">Bs <%= @product.precio_producto %></td><td class="align-middle text-center"><%= @product.location.nombre_lugar %></td><td class="align-middle text-center"><div class="btn-group "><%= link_to ('<i class="fas fa-info-circle"> </i>').html_safe, product_path(@product), html_options = {class: "btn btn-info btn-sm", remote: true} %><% if current_user.role_id == 1 || current_user.role_id ==  2 %> <%= link_to ('<i class="far fa-edit"> </i>').html_safe, edit_product_path(@product), html_options = {class: "btn btn-secondary btn-sm", remote: true} %> <%= link_to ('<i class="fas fa-window-close"> </i>').html_safe, @product, remote: true, method: :delete, data: { confirm: "Borrar el producto: #{@product.nombre_producto}?"}, class: "btn btn-danger btn-sm" %></div></td></tr><%end%>'
);
$('#comienzoprod').after('<div id="si" class="alert alert-info alert-dismissible fade show mt-2" role="alert"><%= flash.now[:success] = "Se ha Registrado el Producto" %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');
$(".alert").first().hide().slideDown(500).delay(4000).slideUp(500, function () {$(this).remove();});