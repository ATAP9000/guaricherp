<%= form_for @product, remote: true  do |f| %>

<div class="item form-group<%= @product.errors[:codigo_producto].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :codigo, "Codigo del producto: " %>
  <div class="input-group">
    <%= f.text_field :codigo_producto, {:class=> "form-control", :placeholder=>"Introduzca el codigo de producto...", required: true} %>
    <%if @product.errors[:codigo_producto].any? %>
    <p class="input-group-text text-danger align-middle "><%= @product.errors[:codigo_producto].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="item form-group<%= @product.errors[:nombre_producto].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :nombre, "Nombre del producto: " %>
  <div class="input-group">
    <%= f.text_field :nombre_producto, {:class=> "form-control", :placeholder=>"Introduzca el nombre del producto...", required: true} %>
    <%if @product.errors[:nombre_producto].any? %>
    <p class="input-group-text text-danger align-middle"><%= @product.errors[:nombre_producto].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="item form-group<%= @product.errors[:category].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :categoria, "Categoria: " %>
  <div class="input-group">
    <%= collection_select(:product, :category_id, @categorias, :id, :nombre_categoria, {:prompt => 'Seleccione categoria'}, { class: "form-control", required: true})%>
    <%if @product.errors[:category].any? %>
    <p class="input-group-text text-danger align-middle"><%= @product.errors[:category].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="item form-group<%= @product.errors[:unit].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :unit, "Unidad: " %>
  <div class="input-group">
    <%= collection_select(:product, :unit_id, @unidades, :id, :nombre_unidad, {:prompt => 'Seleccione unidad'}, { class: "form-control", required: true })%>
    <%if @product.errors[:unit].any? %>
    <p class="input-group-text text-danger align-middle"><%= @product.errors[:unit].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="item form-group<%= @product.errors[:location].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :location, "Ubicacion: " %>
  <div class="input-group">
    <%= collection_select(:product, :location_id, @locaciones, :id, :nombre_lugar, {:prompt => 'Seleccione un lugar'}, { class: "form-control", required: true })%>
    <%if @product.errors[:location].any? %>
    <p class="input-group-text text-danger align-middle"><%= @product.errors[:location].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="item form-group<%= @product.errors[:precio_producto].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :precio, "Precio del producto (Bs): " %>
  <div class="input-group">
    <%= f.number_field :precio_producto, {class: "form-control", step: 1, min: 1, value: 1, :placeholder=>"Precio del producto (Bs)", required: true} %>
    <%if @product.errors[:precio_producto].any? %>
      <p class="input-group-text text-danger align-middle"><%= @product.errors[:precio_producto].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<% if @product.new_record? %>
<div class="item form-group<%= @product.errors[:existencia_producto].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :existencia, "Stock inicial: " %>
  <div class="input-group">
    <%= f.number_field :existencia_producto, {class: "form-control", step: 1, min: 1, value: 1, :placeholder=>"Stock inicial", required: true} %>
    <%if @product.errors[:existencia_producto].any? %>
    <p class="input-group-text text-danger align-middle"><%= @product.errors[:existencia_producto].to_s[/\w([^"]*)/] %></p>
    <% end %> 
 </div>
</div>
<% end %>

<div class="item form-group<%= @product.errors[:min_producto].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :min, "Minimo de Stock: " %>
  <div class="input-group">
    <%= f.number_field :min_producto, {class: "form-control", step: 1, min: 1, value: 1, :placeholder=>"Stock minimo", required: true} %>
    <%if @product.errors[:min_producto].any? %>
    <p class="input-group-text text-danger align-middle"><%= @product.errors[:min_producto].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="item form-group<%= @product.errors[:descripcion_producto].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :descripcion, "Descripcion del producto: " %>
  <div class="input-group">
    <%= f.text_area :descripcion_producto, {class: "form-control", :placeholder=>"Introduzca la descripcion del producto..."} %>
    <%if @product.errors[:descripcion_producto].any? %>
    <p class="input-group-text text-danger align-middle"><%= @product.errors[:descripcion_producto].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="actions mt-2 pt-2">
  <%= f.submit @product.new_record? ? "Crear Producto" : "Actualizar Producto", :class => "btn btn-success"%>
</div>

<% end %>
