$('#modalCategorias').modal('toggle');
$('#tablaCategorias').append(
    '<tr id="categoria_<%= @categoria.id %>" ><td><%= @categoria.nombre_categoria %></td><td><%= @categoria.descripcion_categoria %></td><td><%= link_to 'Editar', edit_category_path(@categoria), html_options = {class: "btn btn-info btn-xs", remote: true} %> <%= link_to "Borrar", @categoria, remote: true, method: :delete, data: { confirm: "Borrar la categoria: #{@categoria.nombre_categoria}?"}, class: "btn btn-danger btn-xs" %></td></tr>'
);
$('#comienzo').before('<div id="si" class="alert alert-info alert-dismissible fade show" role="alert"><%= flash.now[:success] = "Se ha creado la categoria" %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');