$('#modalCategorias').modal('toggle');
$('#tablaCategorias').append(
    '<tr id="categoria_<%= @categoria.id %>" ><td class="align-middle text-center"><%= @categoria.nombre_categoria %></td><td class="align-middle text-center"><%= @categoria.descripcion_categoria%></td><td class="align-middle text-center"><div class="btn-group"><%= link_to 'Editar', edit_category_path(@categoria), html_options = {class: "btn btn-secondary btn-sm", remote: true} %> <%= link_to "Borrar", @categoria, remote: true, method: :delete, data: { confirm: "Borrar la categoria: #{@categoria.nombre_categoria}?"}, class: "btn btn-danger btn-sm" %></div></td></tr>'
);
$('#comienzo').before('<div id="si" class="alert alert-info alert-dismissible fade show" role="alert"><%= flash.now[:success] = "Se ha creado la categoria" %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');