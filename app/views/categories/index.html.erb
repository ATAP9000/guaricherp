<h1 id="comienzo" class="h3 mb-2 text-gray-800">Categorias de Productos</h1>
<br />

<div class="row">
  <div class="col">
    <%= link_to new_category_path, {remote: true, class: "btn btn-info form-control", id: "anadir-categoria-btn"}  do %>
    <span class="fas fa-plus-square" ></span> Crear nueva categoria
    <% end %>
  </div>
  <div class="col">
    <%= search_form_for @q, options = {class: "w-100"} do |f| %>
    <%= f.search_field :nombre_categoria_cont, options = {class: "form-control", placeholder: "Buscar..."} %>
    <%= f.button :type => "submit", class: "btn btn-info form-control" do %>
    <span class="fas fa-search"></span> Buscar
    <% end %>
    <% end %>
  </div>
</div>
<br />

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table id="tablaCategorias" class="table table-bordered" width="100%">
	<thead>
	  <tr>
	    <th>Nombre</th>
	    <th>Descripcion</th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	  <% @categorias.each do |cat| %>
	  <tr id="categoria_<%= cat.id %>" >
	    <td><%= cat.nombre_categoria %></td>
	    <td><%= cat.descripcion_categoria %></td>
	    <td>
	      <%= link_to "Editar", edit_category_path(cat), html_options = {class: "btn btn-info btn-xs", remote: true} %>
	      <%= link_to 'Borrar', cat, remote: true, method: :delete, data: { confirm: "Borrar la categoria: #{cat.nombre_categoria}?"}, class: "btn btn-danger btn-xs" %>
	    </td>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'modal_categorias' %>
