<%= form_for @categoria, remote: true do |f| %>

<div class="item form-group mt-1 pt-1<%= @categoria.errors[:nombre_categoria].any? ? ' has-error has-feedback' : '' %>">
	<%= f.label :nombre_categoria, "Nombre de la Categoria: ", class:"form-label" %>
	<div class="input-group">
		<%= f.text_field :nombre_categoria, {:class=> "form-control", :placeholder=>"Introduzca el nombre de la categoria...", required: true} %>
		<%if @categoria.errors[:nombre_categoria].any? %>
			<p class="input-group-text text-danger align-middle"><%= @categoria.errors[:nombre_categoria].to_s[/\w([^"]*)/] %></p>
		<% end %>
	</div>
</div>


<div class="item form-group<%= @categoria.errors[:descripcion_categoria].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :descripcion, "Descripcion de la categoria: ", class:"form-label" %>
  <div class="input-group">
    <%= f.text_area :descripcion_categoria, {class: "form-control", :placeholder=>"Introduzca la descripcion de la categoria..."} %>
    <%if @categoria.errors[:descripcion_categoria].any? %>
    <p class="input-group-text text-danger align-middle"><%= @categoria.errors[:descripcion_categoria].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="mt-3 pt-3">
  <%= f.submit @categoria.new_record? ? "Crear Categoria" : "Actualizar Categoria", :class => "btn btn-success"%>
</div>  
<% end %>
